[
  {
    "key": "firstName",
    "type": "text",
    "label": "First Name",
    "placeholder": "Jane"
  },
  {
    "key": "lastName",
    "type": "text",
    "label": "Last Name",
    "placeholder": "Doe"
  },
  {
    "key": "emailRequired",
    "type": "checkbox",
    "label": "Email required",
    "description": "Do you really want us to have your email?"
  },
  {
    "key": "email",
    "type": "email",
    "placeholder": "janedoe@gmail.com",
    "description": "We won't spam you",
    "expressionProperties": {
      "required": "model.emailRequired"
    }
  },
  {
    "key": "about",
    "type": "textarea",
    "label": "Tell me about yourself",
    "placeholder": "I like puppies",
    "lines": 4
  },
  {
    "key": "favColor",
    "type": "multi-checkbox",
    "label": "What is your favourite color?",
    "options": [
      {
        "name": "Green",
        "value": "green"
      },
      {
        "name": "Blue",
        "value": "blue"
      },
      {
        "name": "Yellow",
        "value": "yellow"
      },
      {
        "name": "Other",
        "value": "other"
      }
    ]
  },
  {
    "key": "otherColor",
    "type": "well-text",
    "label": "Specify your other favourite color",
    "placeholder": "...other",
    "expressionProperties": {
      "hide": "!model.favColor.Other"
    }
  }
  ]